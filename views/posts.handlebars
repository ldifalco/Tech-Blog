<div class="posts">
  {{#each posts}}
<div class="card" style="width: 18rem;">
  <div class="card-body">

      <h2>
        <a href="/post/{{id}}">{{title}}</a>
      </h2>
      <div>
        Posted by {{User.username}} on {{format_date createdAt}}
      </div>
    </div>
   <div class="card" style="width: 18rem;">
  <div class="card-body">
      {{body}}
    </div>
  </article>
  {{/each}}
</div>